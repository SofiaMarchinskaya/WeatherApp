<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppDarkTextStyle">
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/dark_font_color</item>
    </style>

    <style name="AppLightTextStyle">
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/light_font_color</item>
    </style>

    <style name="BoldDarkTextStyle" parent="AppDarkTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ItalicDarkTextStyle" parent="AppDarkTextStyle">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RegularLightTextStyle" parent="AppLightTextStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>